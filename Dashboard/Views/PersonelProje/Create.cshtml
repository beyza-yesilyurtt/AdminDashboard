@model Dashboard.Models.ProjeTakip.PersonelProje

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script type='text/javascript' src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js'></script>
<script type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js'></script>

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register Card -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a href="index.html" class="app-brand-link gap-2">

                        </a>
                    </div>
                    <!-- /Logo -->
                    <h3 class="mb-2">PROJE OLUŞTUR 🚀</h3>
                    <form action="/PersonelProje/Create" method="post">
                        <br />
                        <div class="form-group">
                            <label>Proje Başlığı</label>
                            <input class="form-control" name="ProjeIsim" type="text" placeholder="Lütfen Proje Başlığını Giriniz" />

                        </div>

                        <div class="form-group">
                            <label>Proje Açıklaması</label>
                            <input class="form-control" name="ProjeAcıklama" type="text" placeholder="Lütfen Proje Açıklaması Giriniz" />

                        </div>

                        <div class="form-group">
                            <label>Öncelik Durumu</label>
                            <input class="form-control" name="PriorityStatus" type="text" placeholder="Lütfen Öncelik Durumunu Giriniz" value="@Model.PriorityStatus" />

                        </div>


                        <div class="mb-3 col-md-12">
                            <label>
                                Öncelik Durumu
                            </label>
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-buildings"></i></span>
                                <select name="PriorityStatus" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Yüksek Öncelikli">Yüksek Öncelikli</option>
                                    <option value="Orta Öncelikli">Orta Öncelikli</option>
                                    <option value="Düşük Öncelikli">Düşük Öncelikli</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <input oninput="OraniDuzenle(this)" name="TamamlanmaOranı" value="@Model.TamamlanmaOranı" style="width:100%" type="range" min="1" max="100" />
                            </div>
                            <div class="col-md-12">
                                <span id="range-text" style="color:black; font-size:20px">@Model.TamamlanmaOranı</span>
                            </div>

                        </div>
                        <div id="insert-section">
                            <div id="personel-select">
                                <div class="form-group">
                                    @Html.DropDownList("PersonelBilgiId", null, htmlAttributes: new { @class = "form-control" })
                                    <i onclick="PersonelEkle()" class="bx bx-plus"></i>
                                </div>
                            </div>
                        </div>

                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Proje Oluştur</button>
                            <a href="/PersonelProje/Index/" class="btn btn-outline-secondary">Ana Sayfaya Dön</a>
                        </div>


                    </form>

                    <p class="text-center">
                        <span>Herhangi bir sorunuz mu var?</span>
                        <a href="https://dijitalgen.com/">
                            <span>dijitalgen.com</span>
                        </a>
                    </p>
                </div>
            </div>
            <!-- Register Card -->
        </div>
    </div>
</div>




<script>
    var parentDiv = $("#insert-section");
    var oldSelectDiv = $("#personel-select");
    function PersonelEkle() {
        var newSelectDiv = oldSelectDiv.clone(true);
        oldSelectDiv.find(".bx plus").remove();
        parentDiv.append(newSelectDiv);
        oldSelectDiv = newSelectDiv;
    }
</script>
