@model IEnumerable<Dashboard.Models.Müşteri.MusteriBilgi>
@{
    ViewBag.Title = "MusteriKart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Müşteri İletişim</h2>

<section class="content">
    <div class="container mt-5">
        <div class="row">

            @*<div class="card card-solid">
                <div class="card-body pb-0">
                    <div class="row">*@
            @foreach (var item in Model)
            {

                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column my-3">
                    <div class="card bg-light d-flex flex-fill border-primary">                      
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.MusteriIsim @item.MusteriSoyisim</b></h2>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail: @item.MusteriMail</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon #: @item.MusteriIletisim</li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="mailto:@item.MusteriMail" class="btn btn-sm btn-primary">
                                    <i class="fas fa-comments"></i> Mail
                                </a>
                                <a href="telno:@item.MusteriIletisim" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Telefon
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>




</section>

