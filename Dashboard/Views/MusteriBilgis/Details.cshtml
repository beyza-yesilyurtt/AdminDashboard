@model Dashboard.Models.Müşteri.MusteriBilgi

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Müşteri Detayları</h2>

<div class="row">
    <div class="col-md-12">

        <div class="card mb-4">
            <h5 class="card-header">Profil Detayları</h5>
            <!-- Account -->

            <hr class="my-0">
            <div class="card-body">
                <form id="formAccountSettings" method="POST" onsubmit="return false">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">İSİM:</label>
                            @Model.MusteriIsim
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">SOYİSİM:</label>
                            @Model.MusteriSoyisim
                        </div>                     

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">E-POSTA:</label>
                            @Model.MusteriMail
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">TELEFON:</label>
                            @Model.MusteriIletisim
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">ŞİRKET İSMİ</label>
                            @Model.SirketIsmi
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">SATILAN ÜRÜN</label>
                            @Model.SatılanUrun
                        </div>
                    

                    </div>
                    <div class="mt-2">
                        <a href="/PersonelBilgileris/Index/" type="submit" class="btn btn-primary me-2">Ana Sayfaya Dön</a>

                    </div>
                </form>
            </div>
            <!-- /Account -->
        </div>

    </div>
</div>
