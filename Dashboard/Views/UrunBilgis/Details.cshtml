@model Dashboard.Models.Urunler.UrunBilgi

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ürün Detayları</h2>

<div class="row">
    <div class="col-md-12">

        <div class="card mb-4">
            <h5 class="card-header">Profil Detayları</h5>
            <!-- Account -->

            <hr class="my-0">
            <div class="card-body">
                <form id="formAccountSettings" method="POST" onsubmit="return false">
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">ÜRÜN İSMİ:</label>
                            @Model.UrunIsim
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">ÜRÜN AÇIKLAMASI:</label>
                            @Model.UrunAciklama
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">ÜRÜN FİYATI:</label>
                            @Model.UrunFiyat
                        </div>

                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">SATILAN ÜRÜN ADET:</label>
                            @Model.ToplamSatılanAdet
                        </div>                     
                    </div>
                    <div class="mt-2">
                        <a href="/UrunBilgis/Index/" type="submit" class="btn btn-primary me-2">Ana Sayfaya Dön</a>

                    </div>
                </form>
            </div>
  
        </div>

    </div>
</div>
