@model IEnumerable<Dashboard.Models.Personel.PersonelBilgileri>

@{
    ViewBag.Title = "PersonelKart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Personel İletişim</h2>

<section class="content">
    <div class="container mt-5">
        <div class="row">

            @*<div class="card card-solid">
                <div class="card-body pb-0">
                    <div class="row">*@
            @foreach (var item in Model)
            {

                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column my-3">
                    <div class="card bg-light d-flex flex-fill border-primary">
                        <div class="card-header text-muted border-bottom-0">

                            @*<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                <div class="card bg-light d-flex flex-fill">
                                    <div class="card-header text-muted border-bottom-0">*@
                            @item.Görev
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.İsim @item.Soyisim</b></h2>
                                    <p class="text-muted text-sm"><b>Depertman: </b> @item.Departman </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mail: @item.Mail</li>
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon #: @item.TelefonNumarası</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@item.PersonelResim" alt="user-avatar" class="rounded-circle" style="height:110px; width:100px">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="mailto:@item.Mail" class="btn btn-sm btn-primary">
                                    <i class="fas fa-comments"></i> Mail
                                </a>
                                <a href="telno:@item.TelefonNumarası" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Telefon
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>




</section>
